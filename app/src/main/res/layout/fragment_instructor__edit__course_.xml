<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Instructor_Edit_Course_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/descriptionBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="15dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Course description" />

        <EditText
            android:id="@+id/courseDaysBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="100dp"

            android:layout_marginLeft="15dp"

            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Course days" />

        <EditText
            android:id="@+id/courseHoursBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="100dp"

            android:layout_marginLeft="15dp"

            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Course hours" />

        <Button
            android:id="@+id/setCourseInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="15dp"
            android:backgroundTint="@color/garnet"
            android:text="Set" />
    </LinearLayout>
</FrameLayout>